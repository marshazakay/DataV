<script>
    new Chart(document.getElementById("doughnut-chart"), {
      type: 'doughnut',
      data: {
        labels: ['Pub', 'Chart', 'Chocolate', 'Other', 'Marsha'],
        datasets: [{
          label: 'Percentage',
          backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#FF5733'],
          data: [47, 23, 18, 12, 20] // Assuming Marsha represents 20%
        }]
      },
      options: {
        title: {
          display: true,
          text: 'Contexts Where the Word "Bar" is Used'
        }
      }
    });

    new Chart(document.getElementById("bar-chart-horizontal"), {
      type: 'horizontalBar',
      data: {
        labels: ['Pub', 'Chart', 'Chocolate', 'Other', 'Marsha'],
        datasets: [{
          label: 'Percentage',
          backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#FF5733'],
          data: [47, 23, 18, 12, 20]
        }]
      },
      options: {
        scales: {
          xAxes: [{
            ticks: {
              beginAtZero: true
            }
          }]
        },
        legend: { display: false },
        title: {
          display: true,
          text: 'Contexts Where the Word "Bar" is Used'
        }
      }
    });
  </script>
